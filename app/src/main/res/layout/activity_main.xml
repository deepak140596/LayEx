<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainActivityStartCoordinatorExampleBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Coordinator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/mainActivityHetRvBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Heterogenous RV Example"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivityStartCoordinatorExampleBtn"/>
    <Button
        android:id="@+id/mainActivityStartScrollingExampleBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nested Scroll Example"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainActivityHetRvBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>