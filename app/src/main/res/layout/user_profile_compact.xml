<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/userProfileCompactIv"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/userProfileCompactNameTv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#6F6D6D"
        app:layout_constraintBottom_toBottomOf="@id/userProfileCompactIv"
        app:layout_constraintStart_toStartOf="@id/userProfileCompactIv"/>

</androidx.constraintlayout.widget.ConstraintLayout>